{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDir": "..",
    "outDir": "dist",
    "module": "ES2015",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments":false,
    "jsx": "react-jsx",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "paths": {
      "niceform-hook": ["../src/index.ts"]
    }
  },
  "include": [
    "src"
  ]
}